@using DiplomaManager.Areas.Admin.ViewModels
@using DiplomaManager.ViewModels
@model IEnumerable<DiplomaManager.Areas.Admin.ViewModels.DevelopmentAreaViewModel>

@{
    ViewBag.Title = "Предметные области";
}

<h3>Предметные области</h3>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Название</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var da in Model)
        {
            <tr>
                <td>@da.Name</td>
                <td>
                    <a class="btn btn-default" role="button" asp-action="Edit"
                       asp-route-id="@da.Id">Редактировать</a>
                    <a class="btn btn-default" role="button" asp-action="Delete"
                       asp-route-id="@da.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-default" role="button" asp-action="Add">Добавить</a>
</div>