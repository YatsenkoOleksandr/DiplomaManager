@model DiplomaManager.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход в админ панель";
}

<h2>Вход в админ панель</h2>
<hr />

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login" class="form-control" placeholder="Введите логин" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="Введите пароль" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}