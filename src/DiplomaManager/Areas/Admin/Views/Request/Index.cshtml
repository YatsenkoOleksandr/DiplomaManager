@using DiplomaManager.ViewModels
@model IEnumerable<DevelopmentAreaViewModel>

@{
    ViewBag.Title = "Специальности";
}

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Название</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var da in Model)
            {
                <tr>
                    <td>@da.Name</td>
                    <td>
                        <a class="btn btn-default" role="button" asp-action="Edit"
                           asp-route-id="@da.Id">Редактировать</a>
                        <a class="btn btn-default" role="button" asp-action="Delete"
                           asp-route-id="@da.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>