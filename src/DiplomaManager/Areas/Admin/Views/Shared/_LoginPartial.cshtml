@{
    var info = await Context.Authentication.GetAuthenticateInfoAsync("Admin");
    var isAuth = info.Principal?.Identity.IsAuthenticated;
}

@if (isAuth != null && isAuth.Value)
{
    <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<a asp-area="" asp-controller="Manage" asp-action="Index" title="Управление">Привет, @info.Principal.Identity.Name!</a>*@
                <a>Привет, @info.Principal.Identity.Name!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти</button>
            </li>
        </ul>
    </form>
}